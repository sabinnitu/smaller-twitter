extends layout

block content
    div.card
        div.card-body
            h3.card-title.mb-0 #{user.name}
            span.mr-3 @#{user.username}
            hr
            span #{user.email}
            hr
            div.btn-group.float-right
                a.btn.btn-danger(href=user.url + '/update') Update
                a.btn.btn-danger(href=user.url + '/delete') Delete

    br

    div.card
        div.card-body
            h5 All #{user.name}'s posts
            ul.list-group.list-group-flush
                each post in posts
                    li.list-group-item #{post.message}

    br

    a.btn.btn-sm.btn-light.active(href='/users') Back