extends layouts/layout

block content
    div.card
        div.card-body
            h3.card-title.mb-0 #{user.name}
            br
            div.row
                div.col-md-6
                    form(method='POST' action='')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===user ? '' : user.name) autocomplete='off' )
                        div.form-group
                            label(for='username') Username:
                            input#username.form-control(type='text', placeholder='Username' name='username' required='true' value=(undefined === user ? '' : user.username) autocomplete='off' )
                        div.form-group
                            label(for='email') Email:
                            input#email.form-control(type='email', placeholder='Email' name='email' required='true' value=(undefined === user ? '' : user.email) autocomplete='off' )
                        button.btn.btn-primary(type='submit') Submit

                    if errors
                        ul
                            for error in errors
                                li!= error.msg

    br

    a.btn.btn-sm.btn-link.active(href='/users/' + user.id) Back