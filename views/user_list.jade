extends layouts/layout

block content
    div.card
        div.card-body
            h3.card-title=title
            br
            ul.list-group.list-group-flush
                each user in user_list
                    li.list-group-item
                        a(href=user.url)
                            img.rounded-circle.mr-3(src="images/elon.png" style="width: 75px; height: 75px;")
                        span.mr-3 #{user.name}
                        span.text-secondary.mr-3 @#{user.username}

                        if user.isFollowed(loggedUser)
                            a.btn.btn-sm.btn-default.float-right(href=user.url + '/unfollow') Unfollow
                        else
                            a.btn.btn-sm.btn-primary.float-right(href=user.url + '/follow') Follow
                else
                    li There are no users.
