extends layouts/layout

block content
    div.card
        div.card-body
            h3.card-title=title
            br
            div.row
                div.col-md-6
                    form(method='POST' action='')
                        div.form-group
                            label(for='message') Message:
                            input#message.form-control(type='text', placeholder='Message' name='message' required='true' value=(undefined===post ? '' : post.message) autocomplete='off')
                        button.btn.btn-primary(type='submit') Submit

                    if errors
                        ul
                            for error in errors
                                li!= error.msg

    br

    a.btn.btn-sm.btn-link.active(href='/posts/') Back