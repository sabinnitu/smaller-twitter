extends layout

block content
    h1=title

    div.row
        div.col-md-6
            form(method='POST' action='')
                div.form-group
                    label(for='message') Message:
                    input#message.form-control(type='text', placeholder='Message' name='message' required='true' value=(undefined===post ? '' : post.message) )
                button.btn.btn-primary(type='submit') Submit

            if errors
                ul
                    for error in errors
                        li!= error.msg

    a.btn.btn-sm.btn-default(href='/posts') Back